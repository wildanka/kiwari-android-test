<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_chat_messages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_received_chat"
        android:elevation="2dp"
        android:maxWidth="250dp"
        android:paddingStart="14dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="32dp"
        android:textAlignment="textStart"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="messages" />

    <TextView
        android:id="@+id/tv_chat_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_message"
        app:layout_constraintStart_toStartOf="@+id/tv_chat_message"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
